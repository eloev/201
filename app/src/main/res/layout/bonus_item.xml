<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:orientation="vertical"
    android:paddingLeft="8dp"
    android:paddingTop="8dp"
    android:paddingRight="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bonus_item_tv"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:textSize="28sp"
            tools:text="bonus_item_tv" />

        <ImageView
            android:id="@+id/bonus_item_img"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_bonuses" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="top"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bonus_item_price"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:textSize="18sp"
            android:layout_weight="3"
            tools:text="bonus_item_price" />
        <TextView
            android:id="@+id/bonus_old_item_price"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:textSize="14sp"
            android:layout_weight="3"
            tools:text="bonus_old_item_price" />

    </LinearLayout>
</LinearLayout>