<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:background="@drawable/circle_angle">

    <ImageView
        android:id="@+id/cat_prod_img"
        android:layout_width="100dp"
        android:layout_height="132dp"
        app:srcCompat="@mipmap/kitkat"
        android:contentDescription="@string/cd_promo_img" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cat_prod_tv"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textSize="16sp"
            android:text="@string/kitkat"/>

        <TextView
            android:id="@+id/cat_prod_price"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textSize="16sp"
            tools:text="kitkf"/>

    </LinearLayout>

</LinearLayout>